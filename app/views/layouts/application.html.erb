<!DOCTYPE html>
<html>
<head>
  <title>Project</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/navbar' %>


  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <%= render 'layouts/alert_or_notice' %>

        <%= render 'layouts/navigation' if params[:action] == 'index'%>
      </div>
    </div>
  </div>

  <!-- YIELD -->
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="col-md-9">


          <%= render 'layouts/intro_header' if params[:action] == 'index' %>

          <%= yield %>

        </div>
        <div class="col-md-3">
          <%= render 'layouts/sidebar' %>
        </div>

    </div>
  </div>
</div>
  <%= render 'layouts/footer' %>
</body>
</html>
