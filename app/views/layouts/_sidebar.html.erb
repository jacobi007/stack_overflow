<!-- SIDEBAR -->
<!-- START statistics -->
<div class="forum-statistics">
  <div class="list-group">
    <li class="list-group-item list-group-item-success">
      <b>Forum statistics</b>
    </li>

    <li class="list-group-item">
      Users <span class='badge'><%= @users %></span>
    </li>
    <li class="list-group-item">
      Threads opened <span class='badge'><%= @threads %></span>
    </li>
    <li class="list-group-item">
      Total posts <span class='badge'><%= @posts %></span>
    </li>

  </div>
  <br>
</div>
<!-- END statistics -->

<!-- CATEGORIES -->
<div class="topic-categories">
  <h3>
    <span class="label label-primary">TOP 5 CATEGORIES</span>
  </h3>
  <hr>
  <ul class="list-unstyled">
    <% @top_categories.each do |category| %>
      <li>
        <b><%= link_to category.name, category %></b>
        <% 3.times do %>
          <span class="pull-right"><span class="glyphicon glyphicon-star"></span></span>
        <% end %>
      </li>
    <% end %>
  </ul>
  <br>
</div>
<!-- END CATEGORIES!-->

<!-- START top users -->
<div class="top-users">
  <h3><span class="label label-danger">TOP 10 USERS</span></h3>
  <hr>

  <ul class="media-list">
    <% @top_users.each do |user| %>
      <li class="media">
        <div class="pull-left">
          <%= image_tag user.avatar.url(:top_user) %>
          <!-- <img class="media-object" src="http://lorempixel.com/output/cats-q-c-40-40-4.jpg" alt="cat"> -->
        </div>
        <div class="media-body">
          <%= link_to(raw("<h4 class='media-heading'>#{user.username}</h4>"), user ) %>
          <small><%= user.points %> points</small>
        </div>
      </li>
    <% end %>

  </ul>
</div>
<!-- END top users -->

<!-- END SIDEBAR! -->
