<div class="panel panel-default panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Sign In</h3>
  </div>
  <div class="panel-body">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :username, autofocus: true %>
    <%= f.input :password%>
    <span class="checkbox_simple_form"><%= f.input :remember_me, as: :boolean, label: false, inline_label: true if devise_mapping.rememberable? %></span>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: "btn btn-info" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>
</div>
