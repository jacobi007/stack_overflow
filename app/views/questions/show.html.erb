<!-- MAIN SECTION -->

<div>
  <h3><%= @question.title %></h3>
  <p><small>Created on <%= @question.created_at %> in <b><%= @question.category %></b></small></p>
  <hr>
</div>

<!-- QUESTION -->
<div class="question">
  <div class="media">
    <a class="pull-left" href="#">
      <img class="media-object" src="http://placehold.it/80x80" alt="...">
    </a>
    <div class="media-body">
      <h4 class="media-heading"><b><%= @question.user.username %> </b><small>on <%= @question.updated_at %></small></h4>
      <p><%= @question.body %></p>
    </div>
    <hr>
  </div>
</div>
<!-- END QUESTION! -->

<div class="answers">
  <div class="row">
    <div class="col-md-11 col-md-offset-1">

      <% @question.answers.each do |answer| %>
        <div class="media">
          <a class="pull-left" href="#">
            <img class="media-object" src="http://placehold.it/80x80" alt="...">
          </a>
          <div class="media-body">
            <h4 class="media-heading"><b><%= answer.user.username %> </b><small>on <%= answer.updated_at %></small></h4>
            <p>
              <%= answer.body %>
            </p>
          </div>
          <hr>
        </div>
      <% end %>

      <% if user_signed_in? %>
      <h3>Add comment!</h3>
      <%= simple_form_for @answer do |f| %>
        <%= f.input :body, label: false, input_html: { rows: 8 } %>
        <%= f.input :question_id, as: :hidden, input_html: { question_id: @question.id }  %>
        <%= f.button :submit, class: 'btn btn-primary' %>

        <% end %>
      <% end %>


      <%#= link_to "Back", questions_path, class: "btn btn-default" %>
    </div>
  </div>

</div>



<!-- END MAIN SECTION! -->
