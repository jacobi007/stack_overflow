<div class="page-header">
  <h1>All categories <small>Click to browse questions by categories!</small></h1>
</div>
<div class="col-md-10">
  <ul class="list-group">
    <% @categories.each do |category| %>
      <li class="list-group-item">
        <span class="badge"><%= pluralize(category.questions.count, 'question') %></span>
        <%= link_to category.name, category %>
      </li>
    <% end %>
  </ul>
</div>
