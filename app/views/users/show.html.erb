<div class="jumbotron">
  <div class="media">
    <span class="pull-left">
      <%= image_tag @user.avatar.url(:test_profile), id: "profile_picture" %>
    </span>
    <div class="media-body">
      <h2 class="text-center media-heading">
        <i><%= @user.username %> </i>
        <span class="label label-warning">
          <%= pluralize(@user.points, "point") %>
        </span>
      </h2>
      <h4 class="text-center"><small><%= @user.email %> joined <%= @user.created_at.strftime("%d-%m-%Y") %></small></h4>
      <ul class="list-unstyled">
        <li><h4>Posts <span class="badge"><%= @user.questions.count + @user.answers.count %></span></h4></li>
        <li><h4>Accepted answers <span class="badge">2</span></h4></li>
        <li><h4>Ranked <span class="badge"><%= User.all.index(@user) + 1 %></span></h4></li>
      </ul>
    </div>
  </div>
</div>
